<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpinSlot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Set status bar color to transparent. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Make status bar translucent -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Avoid content being overlapped by status bar -->
        <item name="android:fitsSystemWindows">true</item>
        <!-- Hide status bar -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Theme.SpinSlot.NoActionBar" parent="Theme.SpinSlot">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
